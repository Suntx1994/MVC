@model Contoso.Model.Depart
@{
    ViewBag.Title = "ById";
}

<body>
    <div>
        @using (Html.BeginForm("ById", "Department", FormMethod.Post))
        {
            @Html.TextBox("Id");
            <input type="submit" value="submit" />
        }
    </div>
    <hr/>
    <br />
    @if(Model != null) { 
    <table class="table">
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Name</td>
            <td>@Model.Budget</td>
        </tr>
    </table>
    }
    
</body>